<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sann"
    >

    <ImageView
        android:id="@+id/close"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:src="@drawable/back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        ></ImageView>
    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:text="Check Orders"
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>


    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/inputs"
        android:layout_marginTop="90dp"

        >

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textColor="#393636"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:text="phone number"
            android:textAlignment="viewEnd"
            android:textColor="#393636"
            android:textSize="18dp"
            android:textStyle="bold"

            android:layout_alignParentRight="true"
            android:gravity="end" />
        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textColor="#393636"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/order_phone_number"
            android:gravity="center"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City, Country"
            android:textColor="#393636"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/order_total_price"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date, Time"
            android:textColor="#393636"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/order_address_city"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/show_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white"
            android:text="Show this order products"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#4C463D"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>




</RelativeLayout>