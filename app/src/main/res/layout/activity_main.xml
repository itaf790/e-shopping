<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backm"
    android:textAlignment="center"
    android:visibility="visible"
    tools:context=".MainActivity"
    android:theme="@android:style/Theme.Black.NoTitleBar">


    <ImageView
        android:id="@+id/logopng"
        android:layout_width="297dp"
        android:layout_height="192dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/elecpng"></ImageView>

    <TextView
        android:id="@+id/slogn"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="323dp"
        android:layout_height="115dp"
        android:layout_below="@id/logopng"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="-53dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Find, Discover, Choose and Buy anything Online "
        android:textColor="#EA7D1A"
        android:textColorLink="#EF7D1A"
        android:textSize="20dp"
        android:textStyle="normal|italic" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
      android:layout_below="@id/btnjoin"
        android:background="@drawable/buttons"
        android:gravity="center"
        android:padding="16dp"
        android:text="Have an Account"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnjoin"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_below="@id/slogn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/inputs"
        android:gravity="center"
        android:padding="16dp"
        android:text="Create Account "
        android:textAllCaps="false"
        android:textColor="#0C0C0C"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>