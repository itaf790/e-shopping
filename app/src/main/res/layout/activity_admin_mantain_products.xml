<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    tools:context=".Admin.AdminMantainProductsActivity">


    <ImageView
        android:id="@+id/close"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back"></ImageView>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:text="Update Products"
        android:id="@+id/text"
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:background="@color/background"
        android:layout_marginTop="80dp"

        >


        <ImageView
            android:id="@+id/product_image_mantain"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/product_name_mantain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_mantain"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"

            android:background="@drawable/input_design"
            android:gravity="center_horizontal"
            android:hint="Product Name"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/product_price_mantain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_mantain"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input_design"
            android:gravity="center_horizontal"
            android:hint="Product Price"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/product_description_mantain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_mantain"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input_design"
            android:gravity="center_horizontal"
            android:hint="Product Description"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_description_mantain"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/buttons"
            android:gravity="center_horizontal"
            android:hint="Apply Changes"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/delete_pdt_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apply_changes_btn"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/buttons"
            android:gravity="center_horizontal"
            android:hint="Delete Product"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>