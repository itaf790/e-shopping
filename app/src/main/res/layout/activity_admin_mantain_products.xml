<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    android:background="@color/background"

    tools:context=".Admin.AdminMantainProductsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/product_image_mantain"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/product_name_mantain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_mantain"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="12dp"

            android:layout_margin="5dp"
            android:background="@drawable/input_design"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/product_price_mantain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_mantain"
            android:hint="Product Price"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_design"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/product_description_mantain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_mantain"
            android:hint="Product Description"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_design"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_description_mantain"
            android:hint="Apply Changes"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/delete_pdt_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Delete Product"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:padding="12dp"
            android:layout_margin="15dp"
            android:background="@drawable/input_design"
            android:textSize="18sp"
            android:layout_below="@+id/apply_changes_btn"
            android:textColor="@android:color/holo_red_dark"

            android:gravity="center_horizontal" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>