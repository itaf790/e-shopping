<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity"
    android:background="@color/background">



    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center|center_horizontal"
            android:text="Reset Password"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_below="@+id/relative"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:text="Answer the follwing Security Questions "></TextView>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs"
        android:hint="Please Wrire your Email"
        android:padding="14dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/ques_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_phone_number"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs"
        android:hint="What city were you born in?"
        android:padding="14dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/ques_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ques_1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs"
        android:hint="What is your favorite food?"
        android:padding="14dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ques_2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttons"
       android:text="Verify"
        android:padding="14dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16dp" />


</RelativeLayout>