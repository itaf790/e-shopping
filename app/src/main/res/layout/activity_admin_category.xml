<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity"
    android:background="@drawable/wall">



    <ImageView
        android:id="@+id/close"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:src="@drawable/back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        ></ImageView>
    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:text="Setting Orders"
        android:id="@+id/text"
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>


    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:gravity="center|center_horizontal"
        android:text="Click to picture to add new items "
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="20dp"
        android:id="@+id/text2"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/additem"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_below="@id/text2"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_baseline_add_to_home_screen_24" />






    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/additem"
        android:background="@drawable/inputs"
        android:text="Maintain Products"
        android:textColor="#221F1F"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"
        />

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/maintain_btn"
        android:background="@drawable/inputs"
        android:text="Check New Orders"
        android:textColor="#221F1F"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10sp"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_orders_btn"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:text="Logout"
        android:textColor="#221F1F"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        />



</RelativeLayout>