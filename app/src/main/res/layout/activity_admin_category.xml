<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/slogn_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal"
        android:text="Add New Products"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="26dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/slogn_category">


        <ImageView
            android:id="@+id/airpods"
            android:layout_width="202dp"
            android:layout_height="100dp"
            android:src="@drawable/airpods" />

        <ImageView
            android:id="@+id/magickey"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/magickyeybored" />

    </LinearLayout>

      <LinearLayout
          android:id="@+id/linear2_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear_category"
          android:layout_marginTop="20dp">


          <ImageView
              android:id="@+id/logitech"
              android:layout_width="202dp"
              android:layout_height="100dp"
              android:src="@drawable/logitech" />

        <ImageView
            android:id="@+id/watch"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/watch"/>

      </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear2_category">


        <ImageView
            android:id="@+id/jbl"
            android:layout_width="216dp"
            android:layout_height="100dp"
            android:src="@drawable/jbl" />

        <ImageView
            android:id="@+id/temp"
            android:layout_width="216dp"
            android:layout_height="100dp"
            android:src="@drawable/temp" />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear3_category"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_orders_btn"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        />



</RelativeLayout>