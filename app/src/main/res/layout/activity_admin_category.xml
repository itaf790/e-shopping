<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView


            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center|center_horizontal"
            android:id="@+id/slogn_category"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Add New Products"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="26dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/additem"
        android:layout_width="match_parent"

        android:layout_height="227dp"
        android:layout_below="@id/rl"

        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"

        app:srcCompat="@drawable/ic_baseline_add_to_home_screen_24" />






    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/additem"
        android:background="@color/colorPrimaryDark"
        android:text="Maintain Products"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"
        />

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/maintain_btn"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10sp"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_orders_btn"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        />



</RelativeLayout>